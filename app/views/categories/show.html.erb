<% title(@category.name, 'Categories') %>

<header>
  <h1><%= @category.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Category", edit_category_path(@category), class: "edit" %></li>
    <li><%= link_to "Delete Category", category_path(@category), method: :delete,
                data: { confirm: "Are you sure you want to delete this category?" },
                class: "delete" %></li>
  </ul>
</header>

<p><%= @category.description %></p>

<header>
  <h2>Skills</h2>
  <ul class="actions">
    <li><%= link_to "New Skill", new_category_skill_path(@category), class: "new" %></li>
  </ul>
</header>