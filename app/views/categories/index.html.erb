<header>
  <h1>Categories - <small>have many skills</small></h1>
  <p class="lead">This is a list of all categories.</p>
  <% admins_only do %>
    <ul class="actions">
      <li><%= link_to "New Category", new_admin_category_path, class: "new" %></li>
    </ul>
  <% end %>
</header>

<div id="categories" class="row">
  <div class='col-md-12'>
    <% if @categories.count > 0 %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Skills</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody class="hover-cursor">
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= render category.skills %></td>
              <td><%= link_to "Show", category_path(category), class: "show" %></td>
              <td><%= link_to "Edit", edit_category_path(category), class: "edit" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>No categories found.</p>
    <% end %>
  </div>
</div>

