<% readonly ||= nil  %>
<div class="tag">
  <% if policy(skill).tag? and !readonly %>
    <%= link_to "<span></span>".html_safe, remove_skill_tag_path(skill, tag), method: :delete, remote: true, class: "remove", title: "remove" %>
  <% end %>
  <%= link_to tag.name, search_category_skills_path(skill.category, search: "tag:#{tag.name}") %>
</div>