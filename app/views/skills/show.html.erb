<% title(@skill.name, 'Skills') %>

<header>
  <h1><%= @skill.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Skill", edit_skill_path(@skill), class: "edit" %></li>
    <li><%= link_to "Delete Skill", skill_path(@skill), method: :delete,
                data: { confirm: "Are you sure you want to delete this skill?" },
                class: "delete" %></li>
  </ul>
</header>

<p><%= @skill.description %></p>
