<header>
  <h1>Users</h1>
  <p class="lead">This is a list of all users.</p>

  <ul class="actions">
    <li><%= link_to "New User", new_admin_user_path, class: "new" %></li>
  </ul>
</header>

<div id="users" class="row">
  <div class='col-md-12'>
    <% if @users.count > 0 %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Fullname</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th></th>
            </tr>
          </thead>
          <tbody class="hover-cursor">
            <% @users.each do |user| %>
            <% role = user.admin? ? "Admin" : (user.worker? ? "Worker" : (user.customer? ? "Customer" : "None")) %>
              <tr>
                <td><%= user.fullname %></td>
                <td><%= user.username %></td>
                <td><%= link_to user.email, admin_user_path(user) %></td>
                <td><%= role %></td>
                <td><%= link_to "Edit", edit_admin_user_path(user), class: "edit" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>No users found.</p>
    <% end %>
  </div>
</div>


