<header>
  <h1>Skills - <small>belong to one category and have many tags</small></h1>
  <p class="lead">This is a list of all skills.</p>
</header>

<div id="skills" class="row">
  <div class='col-md-12'>
    <% if @skills.count > 0 %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Category</th>
              <th>Tags</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody class="hover-cursor">
            <% @skills.each do |skill| %>
              <tr>
                <td><%= skill.name %></td>
                <td><%= skill.description %></td>
                <td><%= skill.category.name %></td>
                <td>
                  <% skill.tags.each do |tag| %>
                    <span class="nowrap">[ <%= tag.name %></div> ]</span>
                  <% end %>
                </td>
                <td><%= link_to "Show", category_skill_path(skill.category, skill), class: "show" %></td>
                <td><%= link_to "Edit", edit_category_skill_path(skill.category, skill), class: "edit" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>No skills found.</p>
    <% end %>
  </div>
</div>