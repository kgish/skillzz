<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        SkillZZ
      <% end %>
    </title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%#= TODO favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to ("SkillZZ&ndash;" + fa_icon("wrench")).html_safe, root_path, class: "navbar-brand" %>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="collapse">
          <ul class="nav navbar-nav">
            <li class="<%= "active" if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
            <% admins_only do %>
              <li class="<%= "active" if current_page?(admin_root_path) %>"><%= link_to "Admin", admin_root_path %></li>
            <% end %>
            <% workers_only do %>
              <li class="<%= "active" if current_page?(worker_root_path) %>"><%= link_to "Worker", worker_root_path %></li>
            <% end %>
            <% customers_only do %>
              <li class="<%= "active" if current_page?(customer_root_path) %>"><%= link_to "Customer", customer_root_path %></li>
            <% end %>
          </ul>
          <% if user_signed_in? %>
            <div class="navbar-right">
              <p class="navbar-text">Signed in as <%= current_user.email %></p>
              <ul class="nav navbar-nav">
                <li><%= link_to (fa_icon("sign-out") + " Sign out").html_safe, destroy_user_session_path, method: :delete %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>">
          <%= message %>
        </div>
      <% end %>

      <%= yield %>
    </div>

<nav class="footer">
  <div class="container">
    <div class='row'>
      <div class='col-md-4'>
        <p>SkillZZ. All rights reserved. &copy;2015.</p>
      </div>
      <div class='col-md-4'>
      </div>
      <div class='col-md-4'>
      </div>
      <div class='col-md-4'>
      </div>
    </div>
  </div>
</nav>

  </body>
</html>
